<div class="container">
  <div class="container-all">

    <div class="col-left">
      <h3>Profile</h3>
      <% if @user.facebook_picture_url %>
        <div class="user-photo">
          <%= cl_image_tag @user.facebook_picture_url, height: 200, width: 200, crop: :fill, :radius=>10 %>
        </div>
      <% elsif %>
        <div class="user-photo">
          <%= cl_image_tag @user.photo, height: 200, width: 200, crop: :fill, :radius=>10 %>
        </div>
      <% else %>
        <div class="empty-picture"">
          <p>-- No picture --</p>
        </div>
      <% end %>

      <br>

      <div class="personal-info">
        <div>Name: <%= @user.first_name %></div>
        <div>City: <%= @user.city %></div>
      </div>
      <br>
      <div class="movie-info">
        <p><strong>Favorite Films</strong></p>
        <% @user.favmovies.each do |favmovie| %>
          <div><%=favmovie.title %></div>
        <% end %>
      </div>
      <br>
      <div class="director-info">
        <p><strong>Favorite Directors</strong></p>
        <% @user.favdirectors.each do |favdirector| %>
          <div><%=favdirector.name %></div>
        <% end %>
      </div>

    </div>

    <div class="col-right">

      <h3>Previous Movies (for now is postings)</h3>
      <div class="posting-info">
      <% @user.postings.each do |posting| %>
        <div class="movie-poster">
          <%= cl_image_tag posting.show.movie.poster, height: 220, width: 140, crop: :fill, :gravity=>"auto" %>
        <li><%=posting.show.movie.title %></li>
        <li><%=posting.show.theater.name %></li>
        <li><%=posting.show.date %></li>
        </div>
      <% end %>
      </div>
    </div>
  </div>
  <br>
    <%= link_to "Back to Search Results", :back, class: "btn-back" %>
</div>
